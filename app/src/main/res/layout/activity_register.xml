<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="24dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/chatgpt_image_21_oct_2025__11_12_37_a_m_" />

        <TextView
            android:text="Registro de Usuario"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etNuevoUsuario"
            android:hint="Nombre de usuario"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#B0BEC5"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCorreo"
            android:hint="Correo electrónico"
            android:inputType="textEmailAddress"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#B0BEC5"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etNuevaClave"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#B0BEC5"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etConfirmarClave"
            android:hint="Confirmar contraseña"
            android:inputType="textPassword"
            android:textColorHint="#AAAAAA"
            android:backgroundTint="#B0BEC5"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnGuardarRegistro"
            android:text="Guardar registro"
            android:backgroundTint="#3949AB"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>
</ScrollView>
